<Window x:Class="task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task1"
        mc:Ignorable="d"
        Title="DataGrid" Height="450" Width="800">
    <Grid Background="Lavender">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="28*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="CustomGrid" HorizontalAlignment="Left" Height="330" Margin="26,10,0,0" VerticalAlignment="Top" Width="619" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnShowData" Content="Show Data" HorizontalAlignment="Left" Margin="51,389,0,0" VerticalAlignment="Top" Width="75" Click="BtnShowData_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
